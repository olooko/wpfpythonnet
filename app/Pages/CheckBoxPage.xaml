<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox x:Name="CheckBox1" IsChecked="True" Tag="1">
                <TextBlock Text="Sample1" />
            </CheckBox>
            <Rectangle Height="7" />
            <CheckBox x:Name="CheckBox2" IsChecked="True" Tag="2" IsEnabled="False">
                <TextBlock Text="Sample2" />
            </CheckBox>
            <Rectangle Height="7" />
            <CheckBox x:Name="CheckBox3" IsChecked="False" Tag="3">
                <TextBlock Text="Sample3" />
            </CheckBox>
            <Rectangle Height="7" />
            <CheckBox x:Name="CheckBox4" IsChecked="False" Tag="4" IsEnabled="False">
                <TextBlock Text="Sample4" />
            </CheckBox>
            <Rectangle Height="14" />
            <TextBlock x:Name="CheckValue" />
        </StackPanel>
    </Grid>
</Page>
