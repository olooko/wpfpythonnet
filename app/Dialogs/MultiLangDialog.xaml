<local:DialogBase x:Class="WpfMvvmApp.Dialogs.MultiLangDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:WpfMvvmApp.Languages"
        xmlns:local="clr-namespace:WpfMvvmApp.Dialogs"
        mc:Ignorable="d" 
        Background="{DynamicResource ColorNeutralBackground1Brush}"
        Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="{x:Static lang:Strings.CLOSE_TEXT}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" />
        </StackPanel>

    </Grid>
</local:DialogBase>
